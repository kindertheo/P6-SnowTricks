{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3">Gestion des commentaires</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Auteur</th>
                    <th>Contenu</th>
                    <th>Cr√©e le</th>
                    <th>Tricks</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.author.lastName }}</td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.date|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('tricks_display', {'id':comment.tricks.id}) }}">{{ comment.tricks.name }}</a>
                    </td>
                    <td>
                        <a href="{{ path('admin_comment_delete', {'id':comment.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
