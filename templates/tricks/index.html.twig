{% extends 'base.html.twig' %}

{% block title %}Liste des différents tricks!{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="pb-5 text-center">Liste des différents tricks</h1>
        <div class="row">
            {% for trick in tricks %}
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3">
                    <div class="card text-center">
                        <a href="#" >
                            <div class="card-title text-center">{{ trick.name }}</div>
                            <img class="img-thumbnail tricks" src="{{ asset(trick.image) }}" alt="Tricks 5">
                            <p>{{ trick.description }}</p>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
