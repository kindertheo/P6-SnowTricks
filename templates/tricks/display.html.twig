{% extends "base.html.twig" %}

{% block title %}{{ tricks.name }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <p>{{ tricks.name }}</p>
                <p>{{ tricks.description }}</p>
                <p>Créer le {{ tricks.createdAt|date('d/m/Y à H:i') }}</p>
                {% if tricks.updatedAt %}
                <p>Modifier le {{ tricks.updatedAt|date('d/m/Y à H:i') }}</p>
                {% endif %}
            </div>
            <div class="col">
                <img src="{{ asset(tricks.image) }}" alt="Image de {{ tricks.name }}" class="img-thumbnail">
                {% if tricks.video %}
                    <iframe width="420" height="315"
                            src="{{ asset(tricks.video) }}">
                    </iframe>
                {% endif %}
            </div>
        </div>

    </div>

{% endblock %}