{% extends "base.html.twig" %}

{% block title %}{{ tricks.name }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <p>
                    {{ tricks.name }}
                    {% if app.user %}
                    <a href="{{ path("tricks_update", {'id' : tricks.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ path("tricks_delete", {'id': tricks.id}) }}">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    {% endif %}
                </p>
                <p>{{ tricks.description }}</p>
                <p>Créer le {{ tricks.createdAt|date('d/m/Y à H:i') }}</p>
                {% if tricks.updatedAt %}
                <p>Modifier le {{ tricks.updatedAt|date('d/m/Y à H:i') }}</p>
                {% endif %}
            </div>
            <div class="col">

                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        {% if tricks.images|length > 0 %}
                            {% for image in tricks.images %}
                                {% if loop.first %}
                                    <div class="carousel-item active">
                                        <img src="{{ asset(tricks.mainimage) }}" alt="Image principale de {{ tricks.name }}" class="d-block w-100">
                                    </div>
                                {% endif %}
                                <div class="carousel-item ">
                                    <img src="{{ asset(image.path) }}" alt="{{ image.name }}" class="d-block w-100">
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="carousel-item active">
                                <img src="{{ asset(tricks.mainimage) }}" alt="Image principale de {{ tricks.name }}" class="d-block w-100">
                            </div>
                        {% endif %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>


                {% if tricks.video %}
                    <iframe width="420" height="315"
                            src="{{ asset(tricks.video) }}">
                    </iframe>
                {% endif %}
            </div>
        </div>

        <h2 class="h3">Commentaires</h2>
        <div class="row">
                {% for comment in comments %}
                <div class="col-12">
                    <div class="card border-secondary mb-3">
                        <div class="card-header">
                            <img src="{{ asset(comment.author.picture) }}" alt="Photo de profil" class="avatar-micro">
                            {{ comment.author.firstName }} {{ comment.author.lastName }}
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ comment.content }}</p>
                            <p>{{ comment.date|date('d/m/Y') }}</p>
                        </div>
                    </div>
                </div>
                <hr>
                {% endfor %}
        </div>
        {% if app.user %}
        <h3>Ecrire un commentaire</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
            <button type="submit" class="btn btn-success">Envoyer</button>
        {{ form_end(form) }}
        {% endif %}
    </div>

{% endblock %}