{% extends "base.html.twig" %}

{% block title %}Ajout d'un trick{% endblock %}

{% form_theme form _self %}

{% block body %}

    <div class="container">
        <h1 class="text-center">Ajout d'un trick</h1>
        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                {{ form_widget(form) }}
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Ajouter le tricks</button>
        {{ form_end(form) }}
    </div>

{% endblock %}
